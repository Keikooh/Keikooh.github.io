---
import Layout from "../../layouts/Layout.astro";
import Section from "../../components/Section.astro";
import Technologies from "../../components/Technologies.astro";
import Projects from "../../components/Projects.astro";
import Experience from "../../components/Experience.astro";
import Title from "../../components/Title.astro";
import ColoredButton from "../../components/Buttons/ColoredButton.astro";
import Pills from "../../components/Pills.astro";

// Icons
import GitHub from "../../icons/GitHub.astro";
import LinkedIn from "../../icons/LinkedIn.astro";
import Link from "../../icons/Link.astro";
import Gmail from "../../icons/Gmail.astro";

// i18n
import es from "../../i18n/es";
import en from "../../i18n/en";
import { Language } from "../../types/language-type";
import Certificates from "../../components/Certificates.astro";

export function getStaticPaths() {
  return [{ params: { lang: "es" } }, { params: { lang: "en" } }];
}



const lang = Astro.params.lang as Language ?? "es";
const translations = { es, en };
const t = translations[lang];
---

<Layout lang={lang} t={t}>
  <main class="px-5">
    <!-- Presentation -->
    <Section class="items-center gap-x-10 text-center">
      <div class="flex flex-col items-center justify-center">
        <ul
          class="flex flex-wrap flex-row gap-2 items-center justify-center text-sm mb-8"
        >
          <Pills link="#">
            <Gmail class="size-4" />
            fergzm05@gmail.com
          </Pills>
          <Pills
            link="https://www.linkedin.com/in/fernanda-gonzalez-mu%C3%B1oz-37084b199/"
          >
            <LinkedIn class="size-4" />
            LinkedIn
          </Pills>
          <Pills link="https://github.com/Keikooh">
            <GitHub class="size-4" />
            GitHub
          </Pills>
        </ul>
        <h1
          set:html={t.home.title}
          class="lg:text-6xl text-5xl font-semibold flex flex-col mb-8 bg-gradient-to-b from-indigo-100 to-lavanda-light text-transparent bg-clip-text"
        />
        <span class="bg-lavanda w-12 h-2 -mt-5 mb-5 rounded-lg"></span>
        <p class="text-indigo-200/40 font-regular mb-8 lg:text-xl text-md">
          {t.home.description}
        </p>

        <ColoredButton link={t.home["resume-link"]}>
          <span>{t.home['resume-button']}</span>
          <Link class="size-5" />
        </ColoredButton>
      </div>
    </Section>

    <!-- Tech Stack -->
    <Section id="tech" class="pt-36">
      <Title text={t.sections.tech}/>
      <span class="bg-lavanda w-12 h-2 -mt-7 mb-10 rounded-lg"></span>
      <Technologies t={t}/>
    </Section>

    <!-- Certifications -->
    <Section id="certifications" class="pt-36">
      <Title text={t.sections.certifications}/>
      <span class="bg-lavanda w-12 h-2 -mt-7 mb-10 rounded-lg"></span>
      <Certificates t={t}>
    </Section>

    <!-- Experience -->
    <Section id="experience" class="pt-36">
      <Title text={t.sections.experience}/>
      <span class="bg-lavanda w-12 h-2 -mt-7 mb-10 rounded-lg"></span>
      <Experience t={t}/>
    </Section>

    <!-- Projects -->
    <Section id="projects" class="pt-36">
      <Title text={t.sections.projects}/>
      <span class="bg-lavanda w-12 h-2 -mt-7 mb-10 rounded-lg"></span>
      <Projects t={t}/>
    </Section>
  </main>
</Layout>

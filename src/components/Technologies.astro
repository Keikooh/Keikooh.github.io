---
// Icons
import React from "../icons/tech/React.astro";
import Angular from "../icons/tech/Angular.astro";
import TypeScript from "../icons/tech/TypeScript.astro";
import HTML from "../icons/tech/HTML.astro";
import JavaScript from "../icons/tech/JavaScript.astro";
import CSS from "../icons/tech/CSS.astro";
import NET from "../icons/tech/NET.astro";
import Git from "../icons/tech/Git.astro";
import CSharp from "../icons/tech/CSharp.astro";
import Azure from "../icons/tech/Azure.astro";
import MySQL from "../icons/tech/MySQL.astro";
import SQL from "../icons/tech/SQL.astro";
import Docker from "../icons/tech/Docker.astro";
import Figma from "../icons/tech/Figma.astro";

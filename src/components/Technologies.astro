        color: "bg-sky-600/60",
        hoverColor: "hover:border-sky-600/60"
      },
      {
        name: "JavaScript",
        icon: JavaScript,
        color: "bg-yellow-500/60",
        hoverColor: "hover:border-yellow-500/60"
      },
      {
        name: "HTML5",
        icon: HTML,
        color: "bg-yellow-700/60",
        hoverColor: "hover:border-yellow-700/60"
      },
      {
        name: "CSS3",
        icon: CSS,
        color: "bg-blue-600/60",
        hoverColor: "hover:border-blue-600/60"
      },
    ],
  },

  {
    category: t.technologies.os,
    items: [
      {
        name: "Linux",
        icon: Linux,
        color: "bg-yellow-300/40",
        hoverColor: "hover:border-yellow-300/40",
      },
      {
        name: "Windows",
        icon: Windows,
        color: "bg-sky-500/60",
        hoverColor: "hover:border-sky-500/60",
      },
    ],
  },
  {
    category: t.technologies.devOps,
    items: [
      {
        name: "Docker",
        icon: Docker,
        color: "bg-blue-800/60",
        hoverColor: "hover:border-blue-800/60",
      },
      {
        name: "Azure DevOps",
        icon: Azure,
        color: "bg-blue-800/60",
        hoverColor: "hover:border-blue-800/60",
      },
    ],
  },
  {
    category: t.technologies.dataBases,
    items: [
      {
        name: "MySQL",
        icon: MySQL,
        color: "bg-sky-400/20",
        hoverColor: "hover:border-sky-400/20",
      },
      {
        name: "SQL Server",
        icon: SQL,
        color: "",
        hoverColor: "",
      },
      {
        name: "Postgres",
        icon: Postgres,
        color: "bg-blue-600/60",
        hoverColor: "hover:border-blue-600/60",
      },
    ],
  },
  {
    category: t.technologies.framewLib,
    items: [
      {

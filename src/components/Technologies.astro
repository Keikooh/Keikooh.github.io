---

<div class="flex flex-wrap gap-6 w-full justify-center">
  {
    stacks.map(({ category, items }) => (
      <section class="flex flex-col justify-center items-center my-5 w-fit">
        <h3 class="mb-5 text-xl text-indigo-100/40 font-semibold">
          {category}
        </h3>
        <div class="flex gap-x-2 gap-y-2 md:gap-y-0 bg-indigo-100/5 flex-wrap rounded-sm p-2 justify-center">
          {items.map(({ name, icon: Icon, color, hoverColor }) => (
            <div
              class={`flex relative group bg-white/10 border-2 border-transparent ${hoverColor} py-3 md:size-28 size-24 rounded items-center  justify-center hover:bg-white/15 transition`}
            >
              <div
                class={`absolute rounded-full w-16 h-16 opacity-0 blur-lg group-hover:opacity-50 transition duration-700 ${color}`}
              />
              <div class="relative flex flex-col items-center">
                <Icon class="md:size-8 size-8 mb-5" />
                <p class="text-xs text-center">{name}</p>
              </div>
            </div>
          ))}
        </div>
      </section>
    ))
  }
</div>
